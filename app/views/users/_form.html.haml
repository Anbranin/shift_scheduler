= form_with(model: @user, local: true, html: { class: 'form offset-2' } ) do |f|
  .row.mb-3
    = f.label :first_name, class: 'form-label'
    .col-sm-6
      = f.text_field :first_name, class: 'form-control'
  .row.mb-3
    = f.label :last_name, class: 'form-label'
    .col-sm-6
      = f.text_field :last_name, class: 'form-control'
  .form-check
    = f.check_box :admin, class: 'form-check-input'
    = f.label :admin, class: 'form-check-label'
  %h2 Qualifications
  #credentials
    = f.fields_for :credentials, @user.credentials do |g|
      = render 'credential_fields', f: g
    = link_to_add_association 'add qualification', f, :credentials
  .mb-3
    = f.submit 'Save user', class: 'btn btn-primary'
    = link_to 'Cancel', users_url, class: 'btn btn-secondary'
